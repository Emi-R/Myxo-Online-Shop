
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Resumen</a></li>
    <li class="breadcrumb-item active">Usuarios</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-user me-1">Lista de Usuarios</i>
    </div>
    <!--Button Create new user-->
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success">Crear nuevo</button>
            </div>
        </div>

        <hr />

        <!--Users Table -->
        <table id="tabla" class="display cell-border" style="width:100%">

            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>Activo</th>
                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody>
            </tbody>

        </table>

    </div>
</div>

@section scripts{
    <script>

        var tabledata;

        jQuery.ajax({
            url: '@Url.Action("ListarUsuarios","Home")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                console.log(data)
            }
        })

        tabledata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,

            "ajax": {
                url: '@Url.Action("ListarUsuarios","Home")',
                type: "GET",
                dataType: "json"
            },

            "columns": [
                { "data": "Nombres" },
                { "data": "Apellidos" },
                { "data": "Correo" },
                {
                    "data": "Activo", "render": function (valor) {

                        if (valor) {
                            return '<span class="badge rounded-pill bg-success">Si</span>'
                        } else {
                            return '<span class="badge rounded-pill bg-danger">No</span>'
                        }
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-warning btn-sm"><i class="fas fa-pen me-1"></i></button>' + 
                        '<button type="button" class="btn btn-danger btn-sm ms-4"><i class="fas fa-trash me-1"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "85px"
                }
            ]

        }
        );

    </script>
    }